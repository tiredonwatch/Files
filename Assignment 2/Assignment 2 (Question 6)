#include <stdio.h> 

int main() { 
    int NumberStudents; 
    printf("Enter the Number of Students:"); 
    scanf("%d",&NumberStudents); 
    float marks[NumberStudents]; 
    for(int i=0; i<NumberStudents ; i++){ 

            printf("Enter marks of student %d:",i+1); 
            scanf("%f",&marks[i]); 
    } 

    printf("\n"); 
    printf("**************************"); 
    printf("\n"); 
    float sum=0; 
    float count=0; 
    for(int k=0; k<NumberStudents; k++){ 

        sum+=marks[k]; 
        count++; 

    } 

    float avg; 
    avg=(sum)/(count); 
    printf("The average score of the marks of %d students is: %f",NumberStudents,avg); 
    printf("\n**************************"); 
    return 0; 

} 

 
