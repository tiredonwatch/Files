#include <stdio.h>

int main() { 

    int NumberStudents; 
    printf("Enter the Number of Students:"); 
    scanf("%d",&NumberStudents); 
    int marks[NumberStudents]; 
    for(int i=0; i<NumberStudents ; i++){ 
            printf("Enter marks of student %d:",i+1); 
            scanf("%d",&marks[i]); 
    } 
    printf("\n"); 
    printf("*******************************************************"); 
    printf("\n"); 
    for(int j=0;j<NumberStudents;j++){ 
        printf("marks of student %d is %d\n",j+1,marks[j]); 
    } 
    for(int k=0;k<NumberStudents;k++){ 
        marks[k]=marks[k]+5;
    } 
    printf("\n"); 
    printf("*******************************************************"); 
    printf("\n"); 
    for(int l=0;l<NumberStudents;l++){ 
         printf("The updated marks of student %d is %d\n",l+1,marks[l]); 

    } 

    return 0; 

} 

 

 

 
