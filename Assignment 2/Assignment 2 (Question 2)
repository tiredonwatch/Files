#include <stdio.h> 
int main() { 
    int NumberStudents; 
    printf("Enter the Number of Students:"); 
    scanf("%d",&NumberStudents); 
    int marks[NumberStudents]; 
    for(int i=0; i<NumberStudents ; i++){ 
            printf("Enter marks of student %d:",i+1); 
            scanf("%d",&marks[i]); 
    } 

    printf("\n"); 
    printf("*********************************"); 
    printf("\n\n"); 
   for(int k=0; k<NumberStudents; k++){ 
    if(marks[k]>=75){ 
        printf("The grade of student %d is A\n",k+1); 
    } 
    else if(marks[k]<=74 && marks[k]>=60){ 
             printf("The grade of student %d is B\n",k+1); 
    } 
    else if(marks[k]<=59 && marks[k]>=40){ 
         printf("The grade of student %d is C\n",k+1); 
    } 
    else{ 
         printf("The grade of student %d is D\n",k+1); 
    } 
   } 

    return 0; 

} 

 

 

 

 

 
